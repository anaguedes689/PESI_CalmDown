<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".activity.HrActivity">

    <TextView
        android:id="@+id/hrvString"
        android:layout_width="418.2dp"
        android:layout_height="39.2dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="@string/hrv"
        android:textColor="@color/text_color"
        android:textSize="32sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.69"
        android:gravity="center"
        android:orientation="vertical">

        <view
            android:id="@+id/velocimeterView"
            class="com.feup.pesi.calmdown.activity.HrActivity$VelocimeterView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnHrv"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:gravity="center"
        android:text="UPDATE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>




